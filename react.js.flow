// @flow

import type { PluginApi, Blocks } from './index.js.flow';

type Plug<S> = React$ComponentType<{
  pluginApi: PluginApi<S>,
  children: React$Node,
  slotProps: {}
}>;

type PlugBlock<S> = {
  type: 'plug',
  slotName: string,
  render: Plug<S>
};

type ReactBlocks<S> = Blocks<S> & {
  plugs: Array<PlugBlock<S>>
};

declare export function createPlug<S>(
  slotName: string,
  render: Plug<S>
): PlugBlock<S>;

declare export function registerPlugin<S>(
  name: string,
  blocks: ReactBlocks<S>
): void;
